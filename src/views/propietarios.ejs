<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Propietarios</title>
    <link rel="stylesheet" href="./bootstrap.min.css">
    <style>
        /* Estilo personalizado para alinear los elementos desde la derecha */
        .navbar-nav {
            margin-left: auto;
            flex-direction: row-reverse;
        }
        .nav-item {
            margin-right: .5rem;
        }
    </style>
     <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.x.x/dist/umd/popper.min.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.x.x/dist/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Taller CRUD iTalento</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Departamentos</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="/crear-departamento">Insertar</a>
                  <a class="dropdown-item" href="/borrar-departamento">Borrar</a>
                  <a class="dropdown-item" href="/update-departamento">Actualizar</a>
                  <a class="dropdown-item" href="/departamentos">Ver</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Personas</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="/crear-persona">Insertar</a>
                  <a class="dropdown-item" href="/borrar-persona">Borrar</a>
                  <a class="dropdown-item" href="/update-persona">Actualizar</a>
                  <a class="dropdown-item" href="/personas">Ver</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Municipios</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="/crear-municipio">Insertar</a>
                  <a class="dropdown-item" href="/borrar-municipio">Borrar</a>
                  <a class="dropdown-item" href="/update-municipio">Actualizar</a>
                  <a class="dropdown-item" href="/municipios">Ver</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Viviendas</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="/crear-vivienda">Insertar</a>
                  <a class="dropdown-item" href="/borrar-vivienda">Borrar</a>
                  <a class="dropdown-item" href="/update-vivienda">Actualizar</a>
                  <a class="dropdown-item" href="/viviendas">Ver</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link active dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Propietarios</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="/crear-propietario">Insertar</a>
                  <a class="dropdown-item" href="/borrar-propietario">Borrar</a>
                  <a class="dropdown-item" href="/update-propietario">Actualizar</a>
                  <a class="dropdown-item" href="/propietarios">Ver</a>
                </div>
              </li>
            </ul>
          </div>
        </div>
    </nav>
    <div class="container">
      <a href="/crear-propietario" class="btn btn-primary mt-4">Nuevo</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Vivienda</th>
            <th scope="col">Departamento</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach((propietario))=> { %>
            <tr>
              <th scope="row"><%= propietario.nombre %></th>
              <th scope="row"><%= propietario.apellido %></th>
              <th scope="row"><%= propietario.direccion %></th>
              <th scope="row"><%= propietario.departamento %></th>
              <th scope="row">
                <a href="/update-propietario" class="btn btn-primary mt-auto">Editar</a><a href="/borrar-propietario" class="btn btn-danger mt-auto">Borrar</a>
              </th>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    </body>
</html>